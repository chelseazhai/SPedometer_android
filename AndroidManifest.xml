<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartsport.spedometer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SSApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".splash.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppSplashScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvc.PedometerActivity"
            android:label="@string/title_activity_pedometer"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseActivityTheme" >
        </activity>
        <activity
            android:name=".user.UserInfoSettingActivity"
            android:label="@string/title_activity_userinfo_setting"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseActivityTheme" >
        </activity>
        <activity
            android:name=".user.UserInfoItemEditorActivity"
            android:label="@string/title_activity_userinfo_item_editor"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseActivityTheme" >
        </activity>
        <activity
            android:name=".demo.DemoActivity"
            android:label="@string/title_activity_demo"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>