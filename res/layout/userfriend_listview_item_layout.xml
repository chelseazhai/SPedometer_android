<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_bg"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/wiis_item_friendAvatar_imageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/silver"
        android:contentDescription="@string/walkInviteInviteeSelectItem_friendAvatar_imageView_contentDescription"
        android:scaleType="centerInside"
        android:src="@drawable/img_default_small_avatar" />

    <TextView
        android:id="@+id/wiis_item_friendNickname_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/wiis_item_friendAvatar_imageView"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp" />

</RelativeLayout>