<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    tools:context=".group.compete.WithinGroupCompeteInviteInfoSettingActivity"
    tools:ignore="MergeRootFrame" >

    <GridView
        android:id="@+id/wigciis_attendeeOperation_gridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/withingroupcompete_inviteattendee_operationgridview_bg"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:horizontalSpacing="24dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:padding="12dp"
        android:scrollbars="none"
        android:verticalSpacing="12dp" >
    </GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wigciis_attendeeOperation_gridView"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_middle_gray" />

        <ListView
            android:id="@+id/wigciis_walkInviteInfo_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@drawable/groupinviteinfo_listview_item_divider"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" >
        </ListView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_middle_gray" />
    </LinearLayout>

</RelativeLayout>