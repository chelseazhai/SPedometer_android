<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <ImageView
        android:id="@+id/uisi_item_indicator_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:contentDescription="@string/userInfoItem_indicator_imageView_contentDescription"
        android:src="@drawable/img_item_indicator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_toLeftOf="@id/uisi_item_indicator_imageView"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/uisi_label_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="middle"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/uisi_info_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>