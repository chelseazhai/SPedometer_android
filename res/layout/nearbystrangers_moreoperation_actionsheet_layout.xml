<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/little_white_transparent"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <GridView
        android:id="@+id/nss_moreOperationActionSheet_operation_gridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:horizontalSpacing="30dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="14dp" />

    <Button
        android:id="@+id/nss_moreOperationActionSheet_cancel_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nss_moreOperationActionSheet_operation_gridView"
        android:background="@drawable/nearbystrangers_moreoperation_cancel_button_bg"
        android:text="@string/nearbyStrangers_moreOperationActionSheet_cancelBtn_text"
        android:textColor="@android:color/white" />

</RelativeLayout>