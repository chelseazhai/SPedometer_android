<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/nss_moas_og_operate_icon_imageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nearbystrangers_moreoperation_actionsheet_operationgridview_item_operate_bg"
        android:contentDescription="@string/nearbyStrangers_moreOperationActionSheet_operateGridViewItem_icon_contentDescription"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nss_moas_og_operate_tip_textView"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nss_moas_og_operate_icon_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="top|center_horizontal"
        android:lines="2"
        android:textColor="@color/gray"
        android:textSize="12sp" />

</RelativeLayout>