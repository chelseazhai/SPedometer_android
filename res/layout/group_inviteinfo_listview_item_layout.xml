<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_bg"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/gii_item_indicator_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/walkOrWithinGroupCompete_inviteInfoItem_indicator_imageView_contentDescription"
        android:src="@drawable/img_item_indicator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/gii_item_indicator_imageView"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gii_label_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="67"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gii_value_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="33"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>