<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- smartsport base activity navigation bar bar button item -->
    <declare-styleable name="ssb_navBar_barButtonItem">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:src" />
        <attr name="android:background" />
    </declare-styleable>

    <!-- smartsport horizontal listView -->
    <declare-styleable name="ss_horizontal_listView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <!-- smartsport user login form item -->
    <declare-styleable name="ss_userLogin_formItem">
        <attr name="label" format="string" />
        <attr name="labelIconSrc" format="color|reference" />
        <attr name="labelPercent" format="float" />
        <attr name="android:hint" />
        <attr name="android:inputType" />
    </declare-styleable>

    <!-- smartsport chart line graph -->
    <declare-styleable name="ss_chart_lineGraph">
        <attr name="lineStrokeColor" format="color" />
        <attr name="lineAxisColor" format="color" />
        <attr name="lineStrokeWidth" format="dimension" />
        <attr name="lineStrokeSpacing" format="dimension" />
        <attr name="lineUseDip" format="boolean" />
    </declare-styleable>

    <!-- smartsport chart bar graph -->
    <declare-styleable name="ss_chart_barGraph">
        <attr name="barAxisColor" format="color" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="barShowAxis" format="boolean" />
        <attr name="barShowAxisLabel" format="boolean" />
        <attr name="barShowText" format="boolean" />
        <attr name="barShowPopup" format="boolean" />
    </declare-styleable>

    <!-- smartsport chart pie graph -->
    <declare-styleable name="ss_chart_pieGraph">
        <attr name="pieInnerCircleRatio" format="integer" />
        <attr name="pieSlicePadding" format="dimension" />
    </declare-styleable>

</resources>