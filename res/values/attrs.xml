<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- smartsport base activity navigation bar bar button item -->
    <declare-styleable name="ssb_navBar_barButtonItem">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:src" />
        <attr name="android:background" />
    </declare-styleable>

    <!-- smartsport horizontal listView -->
    <declare-styleable name="ss_horizontal_listView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <!-- smartsport user login form item -->
    <declare-styleable name="ss_userLogin_formItem">
        <attr name="label" format="string" />
        <attr name="labelIconSrc" format="color|reference" />
        <attr name="labelPercent" format="float" />
        <attr name="android:hint" />
        <attr name="android:inputType" />
    </declare-styleable>

</resources>